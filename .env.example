# DATABASE (MongoDB)
# Root user for MongoDB Docker image
MONGO_INITDB_ROOT_USERNAME=supfile_root
MONGO_INITDB_ROOT_PASSWORD=changeme_secure_password_here
MONGO_INITDB_DATABASE=supfile
DB_HOST=db
DB_PORT=27017
MONGO_URI=[REDACTED]

# JWT
JWT_SECRET=[REDACTED]
JWT_REFRESH_SECRET=[REDACTED]

# SERVER
NODE_ENV=development
SERVER_PORT=5000
SERVER_HOST=0.0.0.0
API_URL=http://localhost:5000

# FRONTEND
VITE_API_URL=http://localhost:5000

# OAUTH (optional - configure if implementing OAuth)
# GOOGLE_CLIENT_ID=
# GOOGLE_CLIENT_SECRET=[REDACTED] GITHUB_CLIENT_ID=
# GITHUB_CLIENT_SECRET=[REDACTED] FILE UPLOAD
MAX_FILE_SIZE=5368709120
UPLOAD_DIR=/usr/src/app/uploads

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:8081

# Rate limit auth (éviter 429 sur login en prod / IP partagée)
# AUTH_RATE_LIMIT_MAX=30
# AUTH_RATE_LIMIT_WINDOW_MS=900000

# EMAIL (pour réinitialisation de mot de passe)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=votre_email@gmail.com
# SMTP_PASS=[REDACTED]
# SMTP_FROM=noreply@supfile.com

# FRONTEND URL (pour les liens de réinitialisation)
FRONTEND_URL=http://localhost:3000
